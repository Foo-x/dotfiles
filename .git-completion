# execute fetch_git_completions.sh, and use in your .bash_profile or .bashrc like below
# . /path/to/dotfiles/.git-completion

SCRIPT_DIR=$(cd $(dirname ${BASH_SOURCE:-$0}); pwd)

complete -F _git g
. ${SCRIPT_DIR}/git-prompt.sh
. ${SCRIPT_DIR}/git-completion.bash

# lighter
export PS1='\n\[\033[92m\]\u@\h\[\033[00m\]:\[\033[94m\]\w\[\033[91m\]$(__git_ps1)\[\033[00m\]\n\$ '

# darker
# export PS1='\n\[\033[32m\]\u@\h\[\033[00m\]:\[\033[34m\]\w\[\033[31m\]$(__git_ps1)\[\033[00m\]\n\$ '

