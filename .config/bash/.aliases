function fcd() {
  local dir

  dir=$(
    bfs d 2> /dev/null |
      fzf +m +s -q ${1:-''} --preview "ls -p --group-directories-first --color=always {} 2> /dev/null"
  )

  if [[ -n "$dir" ]]; then
    cd "$dir"
  fi
}

