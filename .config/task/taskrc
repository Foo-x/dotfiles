news.version=2.6.0

#uda.taskwarrior-tui.task-report.next.filter=$(task show report.next.filter)
uda.taskwarrior-tui.task-report.next.filter=

alias.a=add
alias.an=annotate
alias.b=burndown
alias.c=calendar
alias.co=context
alias.d=done
alias.dn=denotate
alias.e=edit
alias.gh=ghistory
alias.h=history
alias.i=info
alias.m=modify
alias.p=projects
alias.rm=delete
alias.s=start
alias.st=stop
alias.su=summary
alias.t=tags
alias.ts=timesheet
alias.x=delete

context.waiting.read=+WAITING
context.active.read=status:pending and +ACTIVE
context.today.read=+TODAY
context.today_.read=+TODAY or +OVERDUE
context.due.read=+DUE
context.due_.read=+DUE or +OVERDUE
context.overdue.read=status:pending and +OVERDUE
context.next.read=status:pending -WAITING limit:page
context.unblocked.read=status:pending -WAITING -BLOCKED
context.recurring.read=status:pending and (+PARENT or +CHILD)
context.timesheet.read=(+PENDING and start.after:now-4wks) or (+COMPLETED and end.after:now-4wks)
context.ready.read=+READY
context.ls.read=status:pending -WAITING
context.completed.read=status:completed
context.blocking.read=status:pending -WAITING +BLOCKING
context.blocked.read=status:pending -WAITING +BLOCKED
context=next
