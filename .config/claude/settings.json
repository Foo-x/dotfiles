{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(cp:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(which:*)",
      "Bash(type:*)",
      "Bash(echo:*)",
      "Bash(pwd:*)",
      "Bash(printf:*)",
      "Bash(touch:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(diff:*)",
      "Bash(ln:*)",
      "Bash(tree:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(bun run lint)",
      "Bash(bun run test:*)",
      "Bash(terraform fmt:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(env)",
      "Read(.env)",
      "Read(.envrc)",
      "Read(.env.*)",
      "Write(.env*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "ntfy \"claude permission request ${CLAUDE_PROJECT_DIR}\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "ntfy \"claude stop ${CLAUDE_PROJECT_DIR}\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "cook@claude-code-cookbook": true
  },
  "model": "opusplan",
  "language": "japanese",
  "promptSuggestionEnabled": false
}
