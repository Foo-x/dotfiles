{
  "mcpServers": {
    "tsunagi": {
      "command": "bunx",
      "args": [
        "sitemcp",
        "https://foo-x.github.io/tsunagi/",
        "-m",
        "/tsunagi/**",
        "-t",
        "pathname"
      ]
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "github": {
      "command": "bunx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": ""
      }
    },
    "filesystem": {
      "command": "bunx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "~/workspace"
      ]
    }
  }
}
