{
  "$schema": "https://www.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(cp *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(find *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(less *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(awk *)",
      "Bash(sed *)",
      "Bash(which *)",
      "Bash(type *)",
      "Bash(echo *)",
      "Bash(pwd *)",
      "Bash(printf *)",
      "Bash(touch *)",
      "Bash(file *)",
      "Bash(stat *)",
      "Bash(diff *)",
      "Bash(ln *)",
      "Bash(tree *)",
      "Bash(xargs *)",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(npm run lint*)",
      "Bash(npm run test*)",
      "Bash(npm test*)",
      "Bash(npm audit *)",
      "Bash(npm outdated *)",
      "Bash(bun run lint*)",
      "Bash(bun run test*)",
      "Bash(terraform lint *)",
      "Bash(terraform validate *)",
      "Bash(terraform fmt *)"
    ],
    "deny": [
      "Bash(curl *)",
      "Bash(wget *)",
      "Read(env)",
      "Read(.env*)",
      "Read(*.pem)",
      "Read(*.key)",
      "Write(.env*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opusplan",
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "push_ai ${TMUX_PANE} \"claude permission request ${CLAUDE_PROJECT_DIR}\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "push_ai ${TMUX_PANE} \"claude stop ${CLAUDE_PROJECT_DIR}\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline",
    "padding": 0
  },
  "language": "japanese",
  "promptSuggestionEnabled": false
}
