(defcfg
  process-unmapped-keys no
  sequence-timeout 200
  sequence-input-mode hidden-delay-type
  concurrent-tap-hold yes
)

(defsrc
  grv    1      2      3      4      5      6      7      8      9      0      -      =      bspc
  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  caps   a      s      d      f      g      h      j      k      l      ;      '      ret
  lsft   z      x      c      v      b      n      m      ,      .      /      rsft
  lctl   lmet   lalt                 spc                  ralt   rmet   rctl
)

(deflayer base
  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  @btab  a      s      d      f      g      h      j      k      l      ;      '      @b]    @b\
  @bcap  z      x      c      v      b      n      m      ,      .      /      @b'    @bent
  @blsft @bz    @bx    @bc    @bv    @bb    @bn    @bm    @b,    @b.    @b/    @brsft
  @blctl @blmet @blalt               @bspc                @bralt @brmet @brctl
)

(deflayer qwerty
  grv    1      2      3      4      5      6      7      8      9      0      -      =      bspc
  tab    q      w      e      r      t      y      u      i      o      p      [      ]      \
  @qcap  a      s      d      f      g      h      j      k      l      ;      '      ret
  lsft   z      x      c      v      b      n      m      ,      .      /      rsft
  lctl   lmet   lalt                 spc                  ralt   @qrmet rctl
)

(defalias
  ;; base layer
  btab  lctl
  bcap  ent
  blsft lsft
  blctl lctl

  b]    (tap-hold-press 200 200 ent (layer-while-held b]-layer))
  b\    (layer-while-held b\-layer)
  b'    (tap-hold-press 200 200 esc (layer-while-held b'-layer))
  bent  rsft
  brsft XX

  bz    lmet
  bx    lalt
  bc    (tap-hold-press 200 200 mhnk lsft)
  bv    bks
  bb    del
  bn    (tap-hold-press 200 200 hnk (layer-while-held bm-layer))
  bm    ralt
  b,    (tap-dance 200 (rmet (layer-switch qwerty)))
  b.    XX
  b/    XX
  blmet lmet
  blalt (multi lalt (layer-while-held blalt-layer))
  bspc  (tap-hold-release-timeout 200 500 spc (layer-while-held bspc-layer) spc)
  bralt ralt
  brmet rmet
  brctl (layer-while-held brctl-layer)

  ;; qwerty layer
  qcap  XX
  qrmet (tap-dance 200 (rmet (layer-switch base)))
)

(defchordsv2-experimental
  (x tab) (multi lalt tab) 200 all-released ()
)

(deflayermap (bm-layer)
  ;; -+*/%
  1 +
  2 -
  3 (unicode *)
  4 /
  5 (unicode %)

  ;; and, or, not, equal, optional
  q (unicode &)
  w (unicode |)
  e (unicode !)
  r =
  t (unicode ?)

  ;; first, end
  a (unicode ^)
  s (unicode $)

  ;; parentheses
  u (unicode "(")
  i (unicode ")")

  ;; others
  d _
  f (unicode \)
  g (unicode ~)
  [ (unicode `)
  7 (unicode @)
  8 (unicode #)

  0 bks
  - del
)

